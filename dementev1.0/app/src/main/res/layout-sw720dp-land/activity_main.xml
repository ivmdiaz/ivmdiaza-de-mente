<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_level_empty">

    <com.alphamovie.lib.AlphaMovieView
        android:id="@+id/amvMain"
        android:layout_width="470dp"
        android:layout_height="343dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="662dp"
        app:accuracy="0.9"
        app:alphaColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bntLv1Blocked"
                    style="@style/ButtonLevelBlockedsw600dp"
                    android:text="Lv.1"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/bntLv1Completed"
                    style="@style/ButtonLevelCompletedsw600dp"
                    android:text="Lv.1"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bntLv1Current"
                    style="@style/ButtonLevelCurrentsw600dp"
                    android:text="Lv.1"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/txtLv1"
                style="@style/LevelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bntLv2Blocked"
                    style="@style/ButtonLevelBlockedsw600dp"
                    android:text="Lv.2" />

                <Button
                    android:id="@+id/bntLv2Completed"
                    style="@style/ButtonLevelCompletedsw600dp"
                    android:text="Lv.2"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bntLv2Current"
                    style="@style/ButtonLevelCurrentsw600dp"
                    android:text="Lv.2"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtLv2"
                style="@style/LevelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bntLv3Blocked"
                    style="@style/ButtonLevelBlockedsw600dp"
                    android:text="Lv.3" />

                <Button
                    android:id="@+id/bntLv3Completed"
                    style="@style/ButtonLevelCompletedsw600dp"
                    android:text="Lv.3"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bntLv3Current"
                    style="@style/ButtonLevelCurrentsw600dp"
                    android:text="Lv.3"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtLv3"
                style="@style/LevelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bntLv4Blocked"
                    style="@style/ButtonLevelBlockedsw600dp"
                    android:text="Lv.4" />

                <Button
                    android:id="@+id/bntLv4Completed"
                    style="@style/ButtonLevelCompletedsw600dp"
                    android:text="Lv.4"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bntLv4Current"
                    style="@style/ButtonLevelCurrentsw600dp"
                    android:text="Lv.4"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtLv4"
                style="@style/LevelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bntLv5Blocked"
                    style="@style/ButtonLevelBlockedsw600dp"
                    android:text="Lv.5" />

                <Button
                    android:id="@+id/bntLv5Completed"
                    style="@style/ButtonLevelCompletedsw600dp"
                    android:text="Lv.5"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bntLv5Current"
                    style="@style/ButtonLevelCurrentsw600dp"
                    android:text="Lv.5"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtLv5"
                style="@style/LevelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>